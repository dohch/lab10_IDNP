<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Solo el permiso esencial -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_dialog_info"  <!-- Ícono del sistema -->
    android:label="LAB10 - Monitor de Estrés"  <!-- Texto directo -->
    android:theme="@android:style/Theme.Material.Light">  <!-- Tema del sistema -->

    <activity
        android:name=".MainActivity"
        android:exported="true"
        android:screenOrientation="portrait"
        android:theme="@android:style/Theme.Material.Light.NoActionBar">

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

</application>
    </manifest>